<!--pages/join_course/join_course.wxml-->
<view class='container'>
    <view class='search'>
        <input type='text' placeholder='请输入课程号' placeholder-class='placeholder' />
        <icon type='search' size="15"></icon>
    </view>
    <view class='course'>
        <view class='suface'>
            <image src="/image/user-icon.png" mode='aspectFit'></image>
        </view>
        <form class='form'>
            <view class='form-control'>
                <label>课程名：</label>
                <input auto-focus disabled='true' />
            </view>
            <view class='form-control'>
                <label>课程号：</label>
                <input auto-focus disabled='true' />
            </view>
            <view class='form-control'>
                <label>授课老师：</label>
                <input auto-focus disabled='true' />
            </view>
            <button formType="submit">加入</button>
        </form>
    </view>
    <view wx:for="{{array}}">
        {{index}}: {{item.message}}
    </view>
</view>