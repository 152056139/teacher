.container {
    padding: 2%;
}
.search .placeholder {
	font-size: 15px;
	margin-top: 3px;
	margin-left: 5px;
}
.search {
	border: 1px solid #dddddd;
	border-radius: 10px;
	width: 100%;
}
.search input{
	display: inline-block;
	width: 90%;
}
.search icon {
	display: inline-block;
	width: 10;
}
.course{
	display: none;
}
.course .suface {
	width: 100%;
	height: 200px;
	text-align: center;
}
.course .suface image {
	width: 120px;
	height: 120px;
	margin: 50px;
}

.course .form-control {
	border-bottom: solid 1px #dddddd;
	margin-top: 5%;
}
.course .form .form-control label {
	display: inline-block;
}
.course .form .form-control input {
	display: inline-block;
}
.course .form button {
	margin-top: 25%;
	background: #3f99f8;
	color: #ffffff;
}
