
.contailer {
    padding: 0;
    align-items: flex-start;
}
.blackboard .content {
    padding: 25px;
}

.blackboard .content image {
    width: 30px;
    height: 30px;
}

.blackboard .content text {
    color: #fff;
    font-weight: bold;
    margin-left: 10px;
    position: relative;
    bottom: 5px;
}

.blackboard .content textarea {
    margin-top: 5px;
    color: #fff;
    width: 100%;
    font-size: 90%;
    overflow: scroll;
}

.blackboard .background image {
    width: 100%;
    position: absolute;
    top: 0%;
    z-index: -1;
}

.userInfo {
	width: 100%;
	height: 100px;
	margin-top: 20px;
}

.userInfo .content image{
	width: 70px;
	height: 70px;
	border-radius: 50%;
	margin-top: 15px;
	margin-left: 5%;
	display: inline-block;
}
.userInfo .content .info {
	width: 50%;
	padding-left: 10px;
	display: inline-block;
	position: relative;
	bottom: 10px;
}
.userInfo .content .info .name {
	display: block;
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 5px;
}
.userInfo .content .info .countNote {
	display: block;
	font-size: 15px;
	color: #aaaaaa;
}
.userInfo .content .arrow {
	display: inline-block;
	color: #aaaaaa;
	font-size: 70%;
	position: relative;
	bottom: 35px;
}
.userInfo .background {
	width: 100%;
	height: 100px;
	z-index: -1;
	position: relative;
	bottom: 90px;
}

.notes {
	margin-top: 10px;
}

.notes .note {
	margin-top: 10px;
	padding: 15px;
	background: #eeeeee;
}

.notes .note .top image {
	width: 50px;
	height: 50px;
	border-radius: 50%;
	display: inline-block;
}
.notes .note .top .info {
	width: 50%;
	display: inline-block;
	margin-left: 10px;
	position: relative;
	bottom: 10px;
}
.notes .note .top .name{
	display: block;
}
.notes .note .top .time{
	display: block;
	color: #aaaaaa;
	font-size: 10px;
}
.notes .note .middle .text{
	height: 4em;
	overflow: hidden;
}
.notes .note .middle .images{
	margin-top: 5px;
}
.notes .note .middle .images image{
	display: inline-flex;
	width: 30%;
	height:28vw;
	margin-right: 3%;
	margin-top: 5px;
}