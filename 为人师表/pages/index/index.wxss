/**index.wxss**/

.container {
    padding: 0;
    align-items: initial;
    font-size: 11px;
}

.choose-time {
    padding: 10px 0;
}

.choose-time picker {
    color: #3f99f8;
    text-align: center;
    font-size: 15px;
}

.choose-time image {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 10px;
    right: 10px;
}

.choose-course {
    width: 100%;
    height: 100%;
}

.choose-course .title-color {
    background: #e5f7fe;
}

.choose-course .display-inline-block {
    display: inline-block;
}

.choose-course .width-middle {
    width: 13%;
    text-align: center;
}

.choose-course .width-little {
    width: 9%;
    text-align: center;
}

.choose-course .height-big {
    height: 140px;
    border-radius: 5px;
}

.choose-course .height-middle {
    height: 70px;
}

.choose-course .height-little {
    height: 40px;
}

.choose-course .weaks {
    width: 100%;
}

.left {
    display: inline-table;
}

.right {
    display: inline-table;
}

.background-green {
    background: #b0e36e;
}

.background-white {
    background: #fff;
    color: #fff;
}

.menu {
    padding: 5px;
    width: 100px;
    background: #eee;
    position: fixed;
    right: 0px;
    top: 40px;
}
