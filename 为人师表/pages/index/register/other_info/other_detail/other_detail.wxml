<!--pages/index/register/other_info/other_detail/other_detail.wxml-->
<view class='container'>
    <form bindsubmit='ok'>
        <view class="input">
            <input auto-focus='true' type='{{keyboardType}}' name='value' confirm-type='完成' value='{{inputValue}}'></input>
            <icon type='clear' bindtap='clearInput'></icon>
        </view>
        <view class='button'>
            <button bindtap="cancel">取消</button>
            <button formType='submit'>完成</button>
        </view>
    </form>
</view>