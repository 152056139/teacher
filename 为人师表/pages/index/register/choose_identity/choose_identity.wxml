<!--pages/index/register/choose_identity/choose_identity.wxml-->
<view class='container'>
    <form bindsubmit="next">
        <view class='list'>
            <view class='item' bindtap='chooseStudent'>
                <view class='left'>我是学生</view>
                <view class='right'>
                    <icon type='success_no_circle' style="display:{{student}}"></icon>
                </view>
            </view>
            <view class='item' bindtap='chooseTeacher'>
                <view class='left'>我是老师</view>
                <view class="right">
                    <icon type='success_no_circle' style="display:{{teacher}}"></icon>
                </view>
            </view>
        </view>
        <button form-type='submit'>下一步</button>
    </form>
</view>