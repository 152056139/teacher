/* pages/index/mine/mine.wxss */

.container{
	padding: 0;
	width: 100%;

}
.user-icon {
	width: 100%;
	height: 300rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.user-icon image {
	width: 250rpx;
	height: 250rpx;
}
.list {
	width: 100%;
}
.list .setting {
	width: 100%;
	height: 80rpx;
	border-bottom: solid #dddddd 1rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.list .setting .left {
	padding-left: 20rpx;
}
.list .setting .right {
	padding-right: 20rpx;
	color: #999999;
}