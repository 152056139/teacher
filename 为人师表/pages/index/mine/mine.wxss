/* pages/index/mine/mine.wxss */
page{
	background: #eeeeee;
}
.container{
	padding: 0;
	width: 100%;
}
form{
	width: 750rpx;
}
.list {
	margin-top: 20rpx;
	width: 100%;
	background: #ffffff;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.list .setting {
	width: 710rpx;
	height: 90rpx;
	border-bottom: solid #eeeeee 1rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.list .setting .left {
	width: 150rpx;
}
.list .setting .right {
	width: 560rpx;
	color: #999999;
	text-align: right;
}
.user-icon {
	width: 710rpx;
	height: 200rpx;
	border-bottom: solid #eeeeee 1rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.user-icon image{
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}
button{
	position: absolute;
	bottom: 20rpx;
	width: 710rpx;
	margin: 0 20rpx;
	background: #3f99f8;
	color: #ffffff;
}