/* pages/add_course/add_course.wxss */
page {
	background: #eeeeee;
}
.container {
    padding: 0;
	width: 100%;
}
.search {
	background: #ffffff;
	width: 680rpx;
	height: 70rpx;
	border-radius: 10rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	margin-top: 20rpx;
}
.search button{
	background: #ffffff;
}
.search input{
	width: 600rpx;
}
.list {
	background: #ffffff;
	width: 680rpx;
	padding: 0 20rpx;
	margin: 20rpx;
	border-radius: 10rpx;
	display: flex;
	flex-direction: column;
}
.item {
	display: flex;
	flex-direction: row;
	align-items: center;
	border-bottom: 1px solid #eeeeee;
	position: relative;
}
.item image {
	width: 100rpx;
	padding: 10rpx 0;
}
.item .info {
	margin-left: 20rpx;
}
.info .courseName {
	font-size: 35rpx;
}
.info .teacherName {
	font-size: 30rpx;
	color: #666666;
}
.status {
	position: absolute;
	right: 20rpx;
}