/* pages/class/home/student/other/other.wxss */
.container {
	padding: 0%;
}
.top {
	width: 100%;
}
.top .content{
	width: 100%;
	height: 300rpx;
	display: flex;
	align-items: flex-end;
}

.top .content image {
	width: 250rpx;
	height: 250rpx;
	margin: 20rpx;
	z-index: 1;
}
.top .content text {
	color: #ffffff;
	font-size: 60rpx;
	position: relative;
	bottom: 50rpx;
	z-index: 1
}
.top .background image{
	width: 100%;
	height: 300rpx;
	position: absolute;
	top: 0%;
	z-index: 0;
}
.info {
	width: 100%;
}
.info .bar {
	width: 100%;
	height: 70rpx;
	font-size: 35rpx;
	background: #eeeeee;
	display: flex;
	align-items: center;
	padding-left: 20rpx;
}
.info .content .list {
	width: 710rpx;
	height: 100rpx;
	border-bottom: 1rpx solid #eeeeee;
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	justify-content: space-between;
}