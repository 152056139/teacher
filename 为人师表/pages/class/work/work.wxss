/* pages/work/work.wxss */
.btn {
	position: fixed;
	bottom: 20rpx;
	right: 20rpx;
}
.btn image {
	width: 80rpx;
	height: 80rpx;
}
.btn .menu {
	display: flex;
	flex-direction: column-reverse;
	justify-content: flex-end;
	position: fixed;
	bottom: 150rpx;
	right: 20rpx;
}
.btn .menu text {
	padding: 15rpx 50rpx;
	margin: 10rpx 0;
	border: #dddddd solid 2rpx;
	border-radius: 20rpx;
	text-align: right;
}
.container{
	padding: 0%;
}
.work {
	width: 100%;
	height: 200rpx;
	display: flex;
	align-items: center;
	flex-direction: row;
	border-bottom: 1rpx solid #dddddd;
}
.work image {
	width: 140rpx;
	height: 160rpx;
	position: relative;
	left: 20rpx;
}
.work .info {
	position: relative;
	top: -10rpx;
	left: 50rpx;
}
.work .info .name {
	font-size: 40rpx;
}
.work .info .time {
	font-size: 30rpx;
	position: relative;
	top: 20rpx;
	color: #aaaaaa;
}
.work .status{
	position: relative;
	top: 40rpx;
	left: 300rpx;
	font-size: 35rpx;
	color: #6fd171;
}
