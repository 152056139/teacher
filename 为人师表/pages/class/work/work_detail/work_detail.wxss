/* pages/work_detail/work_detail.wxss */
.container {
	padding: 0%;
	align-items: flex-start;
}
.block {
	width: 100%;
}
.bar {
	height: 50px;
	background: #59cafa;
	display: flex;
	align-items: center;
	text-align: center;
}
.bar .text {
	color: #ffffff;
	width: 100%;
}

.content {
	padding: 5%;
}

.content .images {
	display: flex;
	flex-direction: row;
	align-items: flex-start;
	flex-wrap: wrap;
	justify-content: space-between;
}
.content .images image {
	width: 200rpx;
	height: 200rpx;
}
.container button {
	margin: 5%;
	width: 90%;
	background: #5cc73b;
	color: #ffffff;
}