<!--pages/class/class/create_class_single/create_class_single.wxml-->
<view class='container'>
    <form class='list' bindsubmit='submit'>
        <view class='item'>
            <view class='left'>课程</view>
            <view class='right' bindtap='chooseCourse'>{{courseName}}</view>
        </view>

        <view class='item'>
            <view class='left'>日期</view>
            <picker class='right' mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                <view class="picker">
                    {{date}}
                </view>
            </picker>
        </view>

        <view class='item'>
            <view class='left'>时间</view>
            <picker class='right' mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                <view class="picker">
                    {{time}}
                </view>
            </picker>
        </view>

        <view class='item'>
            <view class='left'>教室</view>
            <input class='right' value='{{classroom}}'></input>
        </view>
		<button formType="submit">添加</button>
    </form>
</view>