page {
    background: #eee;
}

.contailer {
    padding: 0;
	width: 750rpx;
    align-items: flex-start;
    flex-direction: column;
}
.tools{
	width: 750rpx;
	padding: 0 20rpx;
	height: 80rpx;
	color: #ffffff;
	background: #3f99f8;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.btn {
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
}

.btn image {
    width: 80rpx;
    height: 80rpx;
}

.btn .menu {
    display: flex;
    flex-direction: column-reverse;
    justify-content: flex-end;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
}

.btn .menu text {
    padding: 15rpx 50rpx;
    margin: 10rpx 0;
    border: #ddd solid 2rpx;
    border-radius: 20rpx;
    text-align: center;
    background: #fff;
}

.blackboard {
	width: 750rpx;
	position: relative;
}

.blackboard .abcd {
    position: absolute;
    right: 50rpx;
    top: 50rpx;
    z-index: 5;
    opacity: 50%;
}

.blackboard .abcd image {
    width: 130rpx;
    height: 130rpx;
}

.blackboard .content {
    padding: 50rpx;
	height: 420rpx;
}

.blackboard .content button {
    position: absolute;
    left: 590rpx;
    top: 430rpx;
	font-size: 30rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
}

.blackboard .content image {
    width: 50px;
    height: 50px;
}

.blackboard .content text {
    color: #fff;
    font-weight: bold;
    margin-left: 10px;
    position: relative;
    bottom: 5px;
}

.blackboard .content textarea {
    margin-top: 5rpx;
	width: 650rpx;
    color: #fff;
    height: 245rpx;
    font-size: 90%;
    overflow: hidden;
}

.blackboard .background image {
	width: 750rpx;
    position: absolute;
	top: 0rpx;
    z-index: -1;
}

.userInfo {
	width: 750rpx;
    height: 220rpx;
    margin-top: 10rpx;
}
.userInfo .background {
	width: 750rpx;
    height: 220rpx;
    z-index: -1;
    position: relative;
    bottom: 90px;
}

.userInfo .content image {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    margin-top: 15px;
    margin-left: 5%;
    display: inline-block;
}

.userInfo .content .info {
    width: 50%;
    padding-left: 10px;
    display: inline-block;
    position: relative;
    bottom: 10px;
}

.userInfo .content .info .name {
    display: block;
    font-weight: bold;
    font-size: 30px;
    margin-bottom: 5px;
}

.userInfo .content .info .countNote {
    display: block;
    font-size: 15px;
    color: #aaa;
}

.userInfo .content .arrow {
    display: inline-block;
    color: #aaa;
    font-size: 70%;
    position: relative;
    bottom: 35px;
}


.notes {
    margin-top: 10rpx;
}

.notes .note {
    background: #fff;
    padding: 20rpx 20rpx;
    border-bottom: #eee 1px solid;
}

.notes .note .top image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: inline-block;
}

.notes .note .top .info {
    width: 50%;
    display: inline-block;
    margin-left: 10px;
    position: relative;
    bottom: 10px;
}

.notes .note .top .name {
    display: block;
}

.notes .note .top .time {
    display: block;
    color: #aaa;
    font-size: 10px;
}

.notes .note .middle .text {
    height: 4em;
    font-size: 30rpx;
    overflow: hidden;
}

.notes .note .middle .images {
    width: 710rpx;
    margin-top: 5px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.notes .note .middle .images image {
    width: 210rpx;
    height: 210rpx;
    margin: 13rpx;
}

.notes .note .bottom {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.notes .note .bottom .good {
    width: 50rpx;
    margin-right: 30rpx;
}

.notes .note .bottom .good .comment {
	width: 50rpx;
}

.score {
    margin-top: 15rpx;
    background: #fff;
    width: 750rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
}

.score .text {
    width: 250rpx;
    height: 150rpx;
    font-size: 70rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}

.score .stars {
    width: 500rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.score .stars image {
    width: 50rpx;
    height: 50rpx;
}

.comment-edit {
	width: 750rpx;
    background: #eee;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    padding: 10rpx 10rpx 0 10rpx;
    z-index: 11;
}

.comment-edit input {
    height: 60rpx;
    font-size: 40rpx;
    width: 590rpx;
    background: #fff;
    margin-right: 10rpx;
    border-radius: 10rpx;
	margin-bottom: 10rpx;
}

.comment-edit button {
    height: 60rpx;
    font-size: 40rpx;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
	margin-bottom: 10rpx;
}
