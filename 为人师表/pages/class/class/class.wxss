page {
	background: #eeeeee;
}
.contailer {
    padding: 0;
    align-items: flex-start;
	flex-direction: column;

}
.btn {
	position: fixed;
	bottom: 20rpx;
	right: 20rpx;
}
.btn image {
	width: 80rpx;
	height: 80rpx;
}
.btn .menu {
	display: flex;
	flex-direction: column-reverse;
	justify-content: flex-end;
	position: fixed;
	bottom: 150rpx;
	right: 20rpx;
}
.btn .menu text {
	padding: 15rpx 50rpx;
	margin: 10rpx 0;
	border: #dddddd solid 2rpx;
	border-radius: 20rpx;
	text-align: right;
	background: #ffffff
}
.blackboard {
	height: 520rpx;
}
.blackboard .abcd {
	position: absolute;
	right: 50rpx;
	top: 50rpx;
	z-index: 5;
	opacity: 50%;
}
.blackboard .abcd image{
	width: 150rpx;
	height: 150rpx;
}
.blackboard .content {
    padding: 50rpx;
	padding-bottom: 10rpx;
}
.blackboard .content button {
	margin: 0;
	padding: 0 20rpx;
	width: 100rpx;
	height: 50rpx;
	font-size: 30rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
	left: 565rpx;
	top: 20rpx;
}
.blackboard .content image {
    width: 50px;
    height: 50px;
}

.blackboard .content text {
    color: #fff;
    font-weight: bold;
    margin-left: 10px;
    position: relative;
    bottom: 5px;
}

.blackboard .content textarea {
    margin-top: 5rpx;
    color: #fff;
    width: 100%;
	height: 245rpx;
    font-size: 90%;
    overflow: scroll;
}

.blackboard .background image {
    width: 100%;
    position: absolute;
    top: 0%;
    z-index: -1;
}

.userInfo {
	width: 100%;
	height: 100px;
	margin-top: 10rpx;
}

.userInfo .content image{
	width: 70px;
	height: 70px;
	border-radius: 50%;
	margin-top: 15px;
	margin-left: 5%;
	display: inline-block;
}
.userInfo .content .info {
	width: 50%;
	padding-left: 10px;
	display: inline-block;
	position: relative;
	bottom: 10px;
}
.userInfo .content .info .name {
	display: block;
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 5px;
}
.userInfo .content .info .countNote {
	display: block;
	font-size: 15px;
	color: #aaaaaa;
}
.userInfo .content .arrow {
	display: inline-block;
	color: #aaaaaa;
	font-size: 70%;
	position: relative;
	bottom: 35px;
}
.userInfo .background {
	width: 100%;
	height: 100px;
	z-index: -1;
	position: relative;
	bottom: 90px;
}

.notes {
	margin-top: 10rpx;
}

.notes .note {
	background: #ffffff;
	padding: 20rpx 20rpx;
	border-bottom: #eeeeee 1px solid;
}

.notes .note .top image {
	width: 50px;
	height: 50px;
	border-radius: 50%;
	display: inline-block;
}
.notes .note .top .info {
	width: 50%;
	display: inline-block;
	margin-left: 10px;
	position: relative;
	bottom: 10px;
}
.notes .note .top .name{
	display: block;
}
.notes .note .top .time{
	display: block;
	color: #aaaaaa;
	font-size: 10px;
}
.notes .note .middle .text{
	height: 4em;
	font-size: 30rpx; 
	overflow: hidden;
}
.notes .note .middle .images{
	width: 710rpx;
	margin-top: 5px;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: flex-start;
}
.notes .note .middle .images image{
	width: 210rpx;
	height:210rpx;
	margin: 13rpx;
}

.score {
	margin-top: 15rpx;
	background: #ffffff;
	width: 750rpx;
	height: 150rpx;
	display: flex;
	flex-direction: row;
}
.score .text {
	width: 250rpx;
	height: 150rpx;
	font-size: 70rpx;
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
}
.score .stars {
	width: 500rpx;
	height: 150rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}
.score .stars image {
	width: 50rpx;
	height: 50rpx;
}