/* pages/chat_detail/chat_detail.wxss */

.container {
    padding: 0;
    display: flex;
    flex-direction: column-reverse;
}

.input {
    width: 100%;
    position: fixed;
    bottom: 0%;
    background: #eee;
    display: flex;
    justify-content: space-between;
}

.input input {
    height: 70rpx;
    width: 570rpx;
    background: #fff;
    margin: 5px 10px;
    margin-right: 0%;
    border-radius: 5px;
    display: inline-block;
}

.input button {
    display: inline-block;
    margin: 5px 5px;
    margin-left: 0;
}
.items{
	width: 100%;
	height: 100%;
	padding-bottom: 80rpx;
}
.item {
    width: 100%;
    display: flex;
    margin-bottom: 20rpx;
}

.item-left {
    flex-direction: row-reverse;
}

.item-right {
    align-items: row;
}

.item image {
    width: 100rpx;
    height: 100rpx;
    margin: 0 20rpx;
}

.item .text {
    max-width: 550rpx;
    border-radius: 10rpx;
    padding: 3px 5px;
    word-break: break-all;
}
.item-right .text {
    background: #eeeeee;
}
.item-left .text {
	background: #b0e36e;
}


