/* pages/login/login.wxss */
.phcolor {
    color: #eeeeee;
    opacity: 20%;
    font-weight: 100;
}
.container {
    padding: 0;
    height: 100%;
    align-items: flex-start;
}
.container .background {
    z-index: -1;
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
}
.container .icon {
    width: 100%;
}
.container .icon image {
    height: 100px;
    width: 100px;
    overflow: hidden;
    border-radius: 50%;
    margin: 0 auto;
    margin-top: 20%;
    display: block;
}
.container .form {
    width: 100%;
}
.container .form input {
    color: #ffffff;
    margin: 5% 20%;
    border-bottom: 1px #eeeeee solid;
}
.container .form button {
    margin: 5% 20%;
    height: 35px;
    font-size: 15px;
    color: #ffffff;
    background: #3f99f8;
}
.container .register {
    width: 100%;
}
.container .register text {
    font-size: 12px;
    color: #3f99f8;
    position: absolute;
    bottom: 3%;
    right: 10%;
}